<% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validation" nonvalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">User Name</label>
                    <input name="username" type="text" class="form-control" required id="username">
                    <div class="valid-feedback"> Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" required id="password">
                    <div class="valid-feedback"> Looks good!</div>
                </div>
                <button class="btn btn-success">Login</button>

            </form>

        </div>
    </div>